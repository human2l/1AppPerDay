@using UTS.ScheduleSystem.Data
@{
    ViewBag.Title = "Editor";
}
@{

    var ConversationalRules = (List<FixedConversationalRule>)ViewBag.FixedConversationalRule;
}

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Rule ID</th>
        <th>Input</th>
        <th>Output</th>
        <th>Related user ID</th>
        <th></th>
        <th></th>
    </tr>

    <tr>
        <td colspan="6">Fixed Conversational Rules</td>
    </tr>
    @foreach (var item in (List<FixedConversationalRule>)ViewBag.FixedConversationalRule)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Input</td>
            <td>@item.Output</td>
            <td>@item.RelatedUsersId</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
        </tr>
    }
    <tr>
        <td colspan="6">Conversational Rules</td>
    </tr>
    @foreach (var item in (List<ConversationalRule>)ViewBag.ConversationalRule)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Input</td>
            <td>@item.Output</td>
            <td>@item.RelatedUsersId</td>
            <td>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = item.Id })</td>
        </tr>
    }
    <p>@Html.ActionLink("Create New Rule", "Create")</p>
</table>
